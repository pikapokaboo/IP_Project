{
  "meta": {
    "title": "YOUR STORY TITLE",
    "start": "start"
  },
  "assets": {
    "bg_room": "assets/bg/room.jpg",
    "char_alex": "assets/chars/alex.png",
    "music_main": "assets/audio/main.mp3",
    "sfx_door": "assets/audio/door.wav"
  },
  "characters": {
    "alex": { "name": "Alex", "color": "#ffe1e1" },
    "sys": { "name": "System", "color": "#ffb9b9" }
  },
  "labels": {
    "start": [
      { "bg": "bg_room", "bgm": { "play": "music_main", "volume": 0.3, "loop": true }, "charLeft": "char_alex" },
      { "say": "alex", "text": "This is dialogue." },
      { "sfx": "sfx_door" },
      { "narrate": "This is narration without a speaker." },
      {
        "choice": "Pick one",
        "options": [
          { "text": "Mark this test as PASS", "call": { "name": "passSequence", "text": "PASS recorded.", "jumpHome": true } },
          { "text": "Mark this test as FAIL", "call": { "name": "failSequence", "text": "FAIL recorded.", "jumpHome": true } },
          { "text": "Go to a custom scene instead", "jump": "custom_scene" }
        ]
      }
    ],
    "custom_scene": [
      { "stopBgm": true },
      { "say": "sys", "text": "You can still use end blocks if you want." },
      { "end": { "result": "none", "text": "Custom scene finished." } }
    ]
  }
}
